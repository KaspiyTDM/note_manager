# Список доступных статусов
statuses = ["новая", "в работе", "завершена", "отменена"]
# Устанавливаем начальный статус заметки
status = "новая"
print(f"Текущий статус заметки: {status}\n")
# Вывод доступных статусов
print("Доступные статусы:")
for idx, s in enumerate(statuses, 1):
    print(f"{idx}. {s}")
# Цикл для изменения статуса
while True:
    user_input = input("\nВведите номер нового статуса (или оставьте пустым для сохранения текущего): ").strip()
# Если ввод пустой, выходим из цикла
    if user_input == "":
        print(f"\nСтатус заметки остался без изменений: {status}")
        break
# Проверяем, является ли ввод числом и соответствует ли номеру статуса
    if user_input.isdigit() and 1 <= int(user_input) <= len(statuses):
        status = statuses[int(user_input) - 1]
        print(f"\nСтатус заметки успешно изменен на: {status}")
        break
    else:
        print("Неверный ввод. Укажите номер от 1 до 4.")
